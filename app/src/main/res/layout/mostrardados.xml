<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#DCDCDC"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#204A9C">


        <TextView
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:gravity="top"
            android:textColor="#FFF"
            android:textSize="18pt"
            android:layout_marginLeft="15dp"
            android:text="@string/seta"
            android:id="@+id/btnvoltar"
            android:onClick="voltar"
            android:layout_alignParentTop="true" />

        <ImageButton
            android:layout_width="387px"
            android:layout_height="98px"
            android:layout_gravity="center"
            android:background="@mipmap/ic_fp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aqui Tem Farmácia Popular"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="12pt"
        android:textColor="#204A9C"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:textColor="#204A9C"
            android:textSize="9dp"
            android:text="Farmácia"
            />
        <TextView
        android:id="@+id/nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#204A9C"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:textColor="#204A9C"
            android:textSize="8dp"
            android:text="Endereço"
            />
        <TextView
        android:id="@+id/endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#204A9C"
        android:layout_below="@+id/endereco"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:textColor="#204A9C"
            android:textSize="8dp"
            android:text="Bairro"
            />
        <TextView
            android:id="@+id/bairro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#204A9C"
            android:layout_below="@+id/bairro"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:textColor="#204A9C"
            android:textSize="8dp"
            android:text="Cidade"
            />
        <TextView
            android:id="@+id/cidade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#204A9C"
            android:layout_below="@+id/cidade"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:textColor="#204A9C"
            android:textSize="8dp"
            android:text="Fone"
            />
        <TextView
        android:id="@+id/telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#204A9C"
        android:layout_below="@+id/telefone"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            android:textColor="#204A9C"
            android:textSize="8dp"
            android:text="E-mail"
            />
        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#204A9C"
            android:layout_below="@+id/email"/>

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">
    <Button
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_margin="11dp"
        android:background="#204A9C"
        android:text="VOLTAR"
        android:textColor="#fff"
        android:onClick="voltar"/>

        <Button
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:layout_margin="11dp"
            android:background="#006400"
            android:text="LIGAR"
            android:textColor="#fff"
            android:onClick="Ligar"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom">
        <ImageButton
            android:layout_width="240px"
            android:layout_height="50px"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/ic_genius"/>
    </RelativeLayout>
</LinearLayout>
