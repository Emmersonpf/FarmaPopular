<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#DCDCDC"
    tools:context="br.com.genius.farmapopular.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#204A9C"
        android:gravity="center">

        <ImageButton
            android:layout_width="387px"
            android:layout_height="98px"
            android:background="@mipmap/ic_fp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <Button
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginRight="30dp"
            android:background="#204A9C"
            android:onClick="OnClickFarmacia"
            android:text="FARMÁCIAS"
            android:textColor="#FFF"
            android:textSize="16dp"/>

        <Button
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="#204A9C"
            android:onClick="OnClickMapa"
            android:text="PERTO DE VOCÊ"
            android:textColor="#FFF"
            android:textSize="16dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginRight="30dp"
            android:background="#204A9C"
            android:onClick="OnClickBtMedic"
            android:text="Medicamentos"
            android:textColor="#FFF"/>

        <Button
            android:id="@+id/button_discar"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="#204A9C"
            android:onClick="OnClickDiscar"
            android:text="LIGUE 136\nOuvidoria SUS"
            android:textColor="#FFF"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center">


        <Button
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_marginRight="30dp"
            android:background="#204A9C"
            android:onClick="OnClickBtAquirir"
            android:text="Como Adquirir"
            android:textColor="#FFF"
            android:textSize="16dp"/>

        <Button
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:background="#204A9C"
            android:onClick="OnClickSobre"
            android:text="SOBRE"
            android:textSize="16dp"
            android:textColor="#FFF" />



    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom">
        <ImageButton
            android:layout_width="240px"
            android:layout_height="50px"
            android:layout_marginBottom="5dp"
            android:background="@mipmap/ic_genius"/>
    </RelativeLayout>

</LinearLayout>
